{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
   "apiManagementServiceName":{
      "type": "string",
      "defaultValue": "defaultService",
      "metadata": {
        "description": "API managment service name"
      }      
    },
    "publisherEmail": {
      "type": "string",
      "defaultValue": "Test@notused.com",
      "minLength": 1,
      "metadata": {
        "description": "The email address of the owner of the service"
      }
    },
    "publisherName": {
      "type": "string",
      "defaultValue":"Mr Test not used",
      "minLength": 1,
      "metadata": {
        "description": "The name of the owner of the service"
      }
    },
    "sku": {
      "type": "string",
      "defaultValue": "Premium",
      "allowedValues": [
        "Developer",
        "Standard",
        "Premium"
      ],
      "metadata": {
        "description": "The pricing tier of this API Management service"
      }
    },
    "skuCount": {
      "type": "string",
      "defaultValue": "1",
      "allowedValues": [
        "1",
        "2"
      ],
      "metadata": {
        "description": "The instance size of this API Management service."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "DefaultLocation",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    // Resource group is at the subscription level no resource group level
    "theDateTag": {
      "type": "string",
      "defaultValue": "[utcNow('MM-dd-yyyy HH:mm:ss')]"

    },
    "resourceGroupName": {
      "type": "string",
      "defaultValue": "DefaultRG",
      "metadata": {
        "description": "Resource group for APIM"
      }
    }  
  },  
  "variables": {
    "apiManagementServiceName": "[parameters('apiManagementServiceName')]"
  },

  "resources": [
    {
      "type": "Microsoft.ApiManagement/service",
      "apiVersion": "2019-12-01",
      "name": "[variables('apiManagementServiceName')]",
      "location": "[parameters('location')]",      
      "tags" : {         
        "Info":"[parameters('theDateTag')]",
        "Name" : "[parameters('apiManagementServiceName')]",
        "ResourceGroup" : "[resourceGroup().name]"

      },
      "sku": {
        "name": "[parameters('sku')]",
        "capacity": "[parameters('skuCount')]"
      },
      "properties": {
        "publisherEmail": "[parameters('publisherEmail')]",
        "publisherName": "[parameters('publisherName')]",
        "virtualNetworkType": "Internal"
      }
    }
  ]
}
